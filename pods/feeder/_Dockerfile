FROM alpine:latest as feeder-skel
COPY ./binary-deps /tmp
RUN apk add `cat /tmp/binary-deps`

FROM alpine:latest as cpan-env
RUN apk update \
    && apk add ca-certificates wget \
    && update-ca-certificates
RUN apk add curl \
    build-base \
    make \
    perl-dev \
    perl-app-cpanminus \
    postgresql-dev

FROM cpan-env:$LABEL as cpan-feeder
COPY ./cpanfile /tmp
RUN cpanm -l /cpan --installdeps /tmp --notest

FROM feeder-skel:$LABEL as nhdb-feeder
COPY --from=cpan-feeder:$LABEL /cpan /cpan
ARG RUN=nhs
WORKDIR ${RUN:-}
CMD ./nhdb-feeder.pl
