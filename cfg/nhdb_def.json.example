#==============================================================================
# nhdb_cfg.json
# """""""""""""
# Configuration file for NHdb.pm and NetHack Scoreboard in general.
#==============================================================================

{
  #--- HTML files are generated in this place

  "http_root" : "/home/httpd/nh",

  #--- database session configuration

  "db" : {

  	"nhdbfeeder" : {
	    "dbname" : "nhdb",
	    "dbuser" : "nhdbfeeder"
    },

  	"nhdbstats" : {
	    "dbname" : "nhdb",
	    "dbuser" : "nhdbstats"
    }

  },

  #--- authentication info for database sessions is stored in this file

  "auth" : "auth.json",

  #--- define wget command-line options

  "wget" : "wget --connect-timeout=10 --dns-timeout=5 --read-timeout=60 -t 1 -c -q -O %s %s",

  #--- configure /dev/null paths

  "devnull" : {
    "http_path" : "devnull/%Y",
    "years" : {
      "2006" : 2006,
      "2007" : 2007,
      "2008" : 2008,
      "2009" : 2009,
      "2010" : 2010,
      "2011" : 2011,
      "2012" : 2012,
      "2013" : 2013,
      "2014" : 2014,
      "2015" : 2015
    }
  },

  #--- feeder configuration

  "feeder" : {

  #--- following fields must be present in the xlogfile or the line is rejected

    "require_fields" : [ "conduct", "starttime", "endtime" ],
  
  #--- regular xlogfile fields; do not change unless you know what you're doing

    "regular_fields" : [
      "role", "race", "gender", "gender0", "align", "align0", "deathdnum", "deathlev", "deaths", "hp", "maxhp",
      "maxlvl", "points", "turns", "realtime", "version", "dumplog", "elbereths"
    ],

  #--- xlogfile lines with following names are dropped

    "reject_name" : [ "wizard", "paxedtest" ]
  },

  #--- path to local xlogfile copies

  "logs" : {
    "localpath" : "logs",
    "urlpath" : null
  },

  #--- variants to include in the First To Ascend page
  
  "firsttoascend" : [
    "dnh", "nhf", "dyn"
  ],

  #--- variants that should show the version number

  "showversion" : [
    "nh", "gh",
  ],
}
